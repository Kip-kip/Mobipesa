<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:focusableInTouchMode="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingStart="50.0dip"
                android:paddingEnd="50.0dip">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="120dip"
                        android:layout_height="120dip"
                        android:layout_marginTop="48.0dip"
                        android:layout_marginBottom="24.0dip"
                        app:layout_constraintBottom_toTopOf="@+id/guideline5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/mobiscrow" />

                    <android.support.constraint.Guideline
                        android:orientation="horizontal"
                        android:id="@+id/guideline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.45" />

                    <TextView
                        android:textSize="16.0sp"
                        android:textColor="#450072"
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50.0dip"
                        android:fontFamily="@font/raleway_regular"
                        android:text="Login to continue"
                        app:layout_constraintBottom_toTopOf="@+id/textView14"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                    <TextView
                        android:textSize="13.0sp"
                        android:textColor="#450072"
                        android:id="@+id/textView14"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:text="Come aboard and enjoy our services."
                        app:layout_constraintBottom_toTopOf="@+id/guideline2"
                        app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView13" />

                    <View
                        android:id="@+id/gridline"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginTop="24.0dip"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textView14" />


                    <EditText
                        android:id="@+id/txtPhoneNo"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8.0dip"
                        android:background="@drawable/bg_edit_text_blue"
                        android:drawableStart="@drawable/ic_phone_blue"
                        android:drawableLeft="@drawable/ic_phone_blue"
                        android:drawablePadding="10.0dip"
                        android:ems="10"
                        android:hint="Mobile Number"
                        android:fontFamily="@font/raleway_regular"
                        android:inputType="phone"
                        android:textColor="@color/colorPrimaryDark"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:textSize="13.0sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/gridline"  />

                    <EditText
                        android:textSize="13.0sp"
                        android:textColor="#ffee"
                        android:textColorHint="@color/colorPrimaryDark"
                        android:id="@+id/txtPin"
                        android:background="@drawable/bg_edit_text_blue"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_width="0.0dip"
                        android:layout_height="35dip"
                        android:layout_marginBottom="8.0dip"
                        android:layout_marginTop="8.0dip"
                        android:hint="Pin"
                        android:ems="10"
                        android:drawableLeft="@drawable/ic_pin_blue"
                        android:drawablePadding="10.0dip"
                        android:inputType="numberPassword"
                        android:drawableStart="@drawable/ic_pin_blue"
                        app:layout_constraintBottom_toTopOf="@+id/txtForgotPin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtPhoneNo" />


                    <TextView
                        android:id="@+id/txtForgotPin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12.0dip"
                        android:layout_marginTop="8.0dip"
                        android:text="Forgot Pin"
                        android:fontFamily="@font/raleway_regular"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="12.0sp"
                        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtPin" />



                    <View
                        android:id="@+id/gridline2"
                        android:background="@color/colorPrimaryDark"
                        android:layout_width="120.0dip"
                        android:layout_height="3.0dip"
                        android:layout_marginTop="16.0dip"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtForgotPin" />

                    <Button
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:id="@+id/btnLogin"
                        android:background="@drawable/bg_btn_round_white"
                        android:layout_width="0.0dip"
                        android:layout_height="35.0dip"
                        android:layout_marginTop="26.0dip"
                        android:text="Login"
                        android:fontFamily="@font/raleway_regular"
                        android:textAllCaps="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtForgotPin" />


                    <LinearLayout android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/loading_view"
                        android:background="@drawable/bg_loading_round"
                        android:visibility="gone"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginTop="16.0dip"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txtForgotPin">

                        <!--<TextView-->
                        <!--android:textSize="16.0sp"-->
                        <!--android:textColor="@color/colorwhite"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Just a sec ..." />-->
                        <ProgressBar
                            android:theme="@style/AppTheme.WhiteAccent"
                            android:id="@+id/progress_bar"
                            android:layout_width="wrap_content"
                            android:layout_height="30.0dip" />
                    </LinearLayout>

                    <TextView
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/txtAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dont have an account?"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_marginEnd="4.0dip"
                        app:layout_constraintBottom_toTopOf="@+id/guideline4"
                        app:layout_constraintEnd_toStartOf="@+id/txtSignup"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/txtSignup"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Signup"
                        android:fontFamily="@font/raleway_regular"
                        android:layout_marginStart="4.0dip"
                        app:layout_constraintBottom_toBottomOf="@+id/txtAccount"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/txtAccount"
                        app:layout_constraintTop_toTopOf="@+id/txtAccount" />

                    <android.support.constraint.Guideline
                        android:orientation="horizontal"
                        android:id="@+id/guideline4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_percent="0.96" />
                </android.support.constraint.ConstraintLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>